<table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% books.each do |book| %>
      <tr>
        <td><%= link_to user_path(book.user) do %>
            <%= attachment_image_tag @user, :profile_image_id, :fill, 100, 100, format: 'jpeg', fallback: 'no_image.jpg', size:'50x50', class: "attachment user profile_image fallback" %></td>
        <% end %>
        <td><%=link_to book_path(book.id) do %><%= book.title %></td>
        <td><%= book.body %></td>
        <% end %>
        <% end %>
      </tr>
    </tbody>
  </table>